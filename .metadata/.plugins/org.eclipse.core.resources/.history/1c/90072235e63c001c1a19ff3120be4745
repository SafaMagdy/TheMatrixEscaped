package code;
import java.util.ArrayList;

import code.Location;

public class TreeNode {
	
	//list for tracking the previous cells visited to avoid repeated states
	public ArrayList<Location> prevCells;
	//current node location
	public Location myLoc;
	//track of neo's health/damage
	public int neoHealth;
	//the updated string according to the path that led to the current node
	public String grid;
	public ArrayList<String> hostages;
	public ArrayList<String> mutantHostages;
	//create arrays of hostages and their locations through a method in this class
	
	
	public TreeNode(ArrayList<Location> prevCells, Location myLoc, int neoH, String grid) {
		
		this.prevCells = prevCells;
		this.myLoc = myLoc;
		this.neoHealth = neoH;
		this.grid = grid;		
		this.hostages = new ArrayList<String>();
		this.mutantHostages = new ArrayList<String>();
	}
	
	//method to fill the number of hostages and mutant
	
	
	
	//method to print the content of any array
	public static void printArr (String[] arr)
	{
		for ( int i = 0 ; i < arr.length; i++) {
			System.out.print(arr[i]);
		}
		System.out.println(" ");
	}
	

	

	
	public static void main(String[] args) {
		
		//System.out.println(whatInCell(2,1, "3,3;1;0,0;1,1;0,1;1,2;0,2,2,0;1,0,0,2,1,50,2,2,90"));
	}
	
	

}
